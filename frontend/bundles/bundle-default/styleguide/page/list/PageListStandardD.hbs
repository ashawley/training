{{#if items}}
<div class="PageListStandardD" data-module{{include "includes/PageList-attributes.hbs" this}}>
    {{include "/global/ModuleHeader.hbs" this}}

    {{#with items}}
        <div class="PageList-items" data-with-borders data-list-loadmore-items>
            {{#each this}}
            <div class="PageList-items-item">
                {{#eq this._template "/page/promo/PagePromo.hbs"}}
                    {{#set imageSize="medium-4x3"}}
                        {{include "/page/promo/PagePromo.hbs" this imagePositionHorizontal="left" mobileAltLayout="true"}}
                    {{/set}}
                {{else}}
                    {{render this}}
                {{/eq}}
            </div>
            {{/each}}
        </div>
    {{/with}}

    {{include "includes/PageList-footer.hbs" this canPaginate=true}}
</div>
{{/if}}
