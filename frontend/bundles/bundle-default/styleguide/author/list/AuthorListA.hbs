<div class="AuthorListA" data-module{{include "/page/list/includes/PageList-attributes.hbs" this}}>
    {{include "/global/ModuleHeader.hbs" this}}

    {{#with items}}
        <ul class="AuthorListA-items" data-with-borders>
            {{#each this}}
                <li class="AuthorListA-items-item">
                    {{#set imageSize=../../itemImageAspectRatio}}
                        {{include "/author/promo/AuthorPromo.hbs" this}}
                    {{/set}}
                </li>
            {{/each}}
        </ul>
    {{/with}}

    {{include "/page/list/includes/PageList-footer.hbs" this}}
</div>
