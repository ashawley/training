<div class="ProductPromoModule" data-module data-module-contained
    {{~include "/page/promo/includes/PagePromoAttributes.hbs" this ctaButtonText=(fallback ctaButtonText (format "/product/promo/ProductPromoModule" "ctaText"))~}}
    {{~#with layout}} data-layout="{{this}}"{{/with}}
    {{~#if animateOnScroll}} data-animate="fromBottom" {{/if~}}>
    {{include "/link/AnchorLink.hbs" this}}

    <div class="ProductPromoModule-wrapper">
        {{#set
            imageSize=(fallback imageAspectRatio "large-16x9")
        }}
            {{#if media}}
                <div class="PagePromo-media">
                    {{~#if url~}}
                        <a class="Link" {{#with name}}aria-label="{{this}}"{{/with}} href="{{url}}">{{media}}</a>
                    {{~else~}}
                        <span class="Link">{{media}}</span>
                    {{~/if~}}
                </div>
            {{/if}}
        {{/set}}

        <div class="ProductPromoModule-content">
            {{include "/page/promo/includes/PagePromoCategory.hbs" this}}
            {{include "/page/promo/includes/PagePromoTitle.hbs" this}}
            {{include './includes/ProductPromo-pricing.hbs' this}}
            {{include "/page/promo/includes/PagePromoDescription.hbs" this}}
            {{include "/page/promo/includes/PagePromoButton.hbs" this ctaButtonText=(fallback ctaButtonText (format "/product/promo/ProductPromoModule" "ctaText"))}}
            {{include '/product/promo/includes/ProductPromo-options.hbs' this}}
        </div>
    </div>
</div>
