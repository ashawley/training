{{#each item}}
    {{#if (and (not ../_styledTemplate) this._styledTemplate)}}
        {{!-- Falls back to the Shared items defined style. In practice, this allows Shared Placements
          to fall back to the Shared objects defined style. --}}
        {{this}}
    {{else}}
    <div class="Enhancement"
        {{~#with ../enhancementAlignmentNoFullWidth}} data-{{this}}{{/with~}}
    >
        <div class="ProductPromoEnhancement"
                {{~#with ../enhancementAlignmentNoFullWidth}} data-{{this}}{{/with~}}
            >
            {{include "/product/promo/ProductPromoModule.hbs" this
                layout="7030"
                backgroundColor=../backgroundColor
                borderColor=../borderColor
                inverseColors=../inverseColors
            }}
        </div>
    </div>
    {{/if}}
{{/each}}