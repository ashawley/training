<div class="ProductPromo"
    {{~include "/page/promo/includes/PagePromoAttributes.hbs" this~}}
    >
    {{#set imageSize=(fallback (get "imageSize") "medium-16x9")}}
        {{#if media}}
            <div class="PagePromo-media">
                {{~#if url~}}
                    <a class="Link" {{#with name}}aria-label="{{this}}"{{/with}} href="{{url}}">{{media}}</a>
                {{~else~}}
                    <span class="Link">{{media}}</span>
                {{~/if~}}
            </div>
        {{/if}}
    {{/set}}

    <div class="ProductPromo-content">
        {{include "/page/promo/includes/PagePromoCategory.hbs" this}}
        {{include "/page/promo/includes/PagePromoTitle.hbs" this}}
        {{include '/product/promo/includes/ProductPromo-pricing.hbs' this}}
        {{include "/page/promo/includes/PagePromoDescription.hbs" this}}
        {{include "/page/promo/includes/PagePromoButton.hbs" this}}
        {{include '/product/promo/includes/ProductPromo-options.hbs' this}}
    </div>
</div>
