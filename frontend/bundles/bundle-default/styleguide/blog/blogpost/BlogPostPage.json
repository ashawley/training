{
  "_include": "/page/Page.json",
  "_template": "/blog/blogpost/BlogPostPage.hbs",

  "datePublished": "{{date}}",
  "dateModified": "Modified: {{date}}",

  "headline": "{{words([10,15])}}",
  "subHeadline": "{{words([15,20])}}",

  "authors": [
    {
      "_include": "/author/Author.json",
      "_repeat": 3
    }
  ],

  "breadcrumbs": [
    {
      "_include": "/page/BreadcrumbLink.json",
      "_repeat": 2
    }
  ],

  "tags": [
    {
      "_include": "/tag/TagLink.json",
      "_repeat": 2
    }
  ],

  "lead": {
    "_include": "/figure/Figure.json"
  },

  "articleBody": [
    "{{paragraphs([2,3])}}",
    {
      "_template": "/image/ImageEnhancement.hbs",
      "enhancementAlignmentImage": "align-left",
      "item": {
        "_include": "/figure/Figure.json"
      }
    },
    "{{paragraphs([2,3])}}",
    {
      "_template": "/image/ImageEnhancement.hbs",
      "enhancementAlignmentImage": "align-right",
      "item": {
        "_include": "/figure/Figure.json"
      }
    },
    "{{paragraphs([2,3])}}",
    {
      "_template": "/image/ImageEnhancement.hbs",
      "enhancementAlignmentImage": "align-fullWidth",
      "item": {
        "_include": "/figure/Figure.json"
      }
    },
    "{{paragraphs([2,3])}}",
    {
      "_template": "/image/ImageEnhancement.hbs",
      "enhancementAlignmentImage": "align-portrait-right",
      "item": {
        "_include": "/figure/Figure.json"
      }
    },
    "{{paragraphs([2,3])}}",
    {
      "_template": "/image/ImageEnhancement.hbs",
      "enhancementAlignmentImage": "align-portrait-left",
      "item": {
        "_include": "/figure/Figure.json"
      }
    },
    "{{paragraphs([2,3])}}",
    {
      "_template": "/carousel/CarouselEnhancement.hbs",
      "item": {
        "_include": "/carousel/Carousel.json"
      }
    },
    "{{paragraphs([2,3])}}",
    {
      "_include": "/pullquote/PullQuote.json",
      "enhancementAlignment": "align-left"
    },
    "{{paragraphs([2,3])}}",
    {
      "_template": "/image/ImageEnhancement.hbs",
      "item": {
        "_include": "/figure/Figure.json"
      }
    },
    "{{paragraphs([2,3])}}",
    {
      "_include": "/youtube/YouTubeVideoEnhancement.json"
    },
    "{{paragraphs([2,3])}}",
    {
      "_template": "/video/VideoEnhancement.hbs",
      "player": [
          {
          "_template": "/video/HTML5VideoPlayer.hbs",
          "playerId": "fbb951909b1b446688ae7d58bf535ada6",
          "sources": [
              {
              "_template": "/video/HTML5VideoPlayerSource.hbs",
              "src": "https://brightspot-brightspot.s3.amazonaws.com/bsp/42/1d/060762bc408ebec5932f9e66407b/pexels-videos-1851190.mp4",
              "type": "video/mp4"
              }
          ],
          "videoId": "s3:42/1d/060762bc408ebec5932f9e66407b/pexels-videos-1851190.mp4",
          "videoTitle": "{{words([10,20])}}"
          }
      ],
      "title": "{{words(5)}}"
    },
    "{{paragraphs([2,3])}}"
  ],

  "aside": [
    {
      "_include": "/page/list/PageListRightRailA.json"
    },
    {
      "_template": "/dfp/GoogleDfpAdModule.hbs",
        "adIndex": "1250",
        "slot": "/13236445/responsive_banner",
        "sizes": "[[300, 250]]",
        "adSizeMaps": "[[[1024,768], [300,250]], [[300,250], [300,250]]]",
        "ampEnabled": true,
        "ampWidth": 728,
        "ampHeight": 90,
        "ampSizes": "728x90,300x250",
        "ampMultiSizeValidation": false
    },
    {
      "_include": "/page/list/PageListRightRailA.json"
    }
  ]
}
